<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/background"
    tools:context=".studentActivity">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/logo_dis"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/uniLabel"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:text="@string/ins_name"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Detail"
            android:layout_below="@id/header"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="#0f00b0"/>


    <ImageView
        android:id="@+id/stImg"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_below="@id/titleLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/student_pic" />

    <TextView
        android:id="@+id/sName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stImg"
        android:layout_marginTop="15dp"
        android:textSize="22dp" />

        <TextView
            android:id="@+id/sEmail"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sName"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/sPhone"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sEmail"
            android:layout_marginTop="15dp"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/lgOut"
            android:text="Log out "
            android:textSize="20dp"
            android:layout_below="@id/sPhone"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>